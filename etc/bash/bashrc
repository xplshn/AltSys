# /etc/bash/bashrc

# Do not edit this file. # Note: This file has been edited.
# Place your readable configs in /etc/bash/bashrc.d/*.sh 

if [[ $- != *i* ]] ; then
	# Shell is non-interactive.  Be done now!
	return
fi

if [ -d /etc/bash/bashrc.d/ ]; then
	for f in /etc/bash/bashrc.d/*.sh; do
		[ -r "$f" ] && . "$f"
	done
	unset f
fi

# Check if .bashrc, .config/bash/bashrc, and .config/bash/bashrc.d exist and source their contents

if [ -f "$HOME/.bashrc" ]; then
  source "$HOME/.bashrc"
fi

if [ -f "$HOME/.config/bash/bashrc" ]; then
  source "$HOME/.config/bash/bashrc"
fi

if [ -d "$HOME/.config/bash/bashrc.d" ]; then
  for file in "$HOME/.config/bash/bashrc.d"*; do
    source "$file"
  done
fi
